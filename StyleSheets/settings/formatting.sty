% ===== REQUIREMENTS ===== %
% Define new counters
\newcounter{req}
\newcounter{subreq}[req]
\renewcommand{\thesubreq}{\thereq.\arabic{subreq}}

% Define standard cref formats
\crefname{req}{requirement}{requirements}
\crefname{subreq}{requirement}{requirements}

% Define custom reference command for numeric-only references
% Simply use \ref for numeric references now that label format is numeric-only
\newcommand{\crefnum}[1]{\ref{#1}}

% Define requirement commands
\newcommand{\requirement}[1]{%
  \refstepcounter{req}%
  \section*{Requirement \thereq: #1}
  \addcontentsline{toc}{section}{Requirement \thereq: #1}
  \label{req:\thereq}%
}

\newcommand{\subrequirement}[1]{%
  \refstepcounter{subreq}%
  \subsection*{Requirement \thesubreq: #1}
  \addcontentsline{toc}{subsection}{Requirement \thesubreq: #1}
  \label{subreq:\thesubreq}%
}

% Define new counters for Test and Subtest
\newcounter{test}
\newcounter{subtest}[test]
\renewcommand{\thesubtest}{\thetest.\arabic{subtest}}

% Define standard cref formats for Test and Subtest
\crefname{test}{test}{tests}
\crefname{subtest}{test}{tests}

% Define custom reference command for numeric-only references
% This command will use the same strategy as for requirements, using \ref directly
\newcommand{\tcrefnum}[1]{\ref{#1}}

% Define test commands
\newcommand{\test}[1]{%
  \refstepcounter{test}%
  \section*{Test \thetest: #1}
  \addcontentsline{toc}{section}{Test \thetest: #1}
  \label{test:\thetest}%
}

\newcommand{\subtest}[1]{%
  \refstepcounter{subtest}%
  \subsection*{Test \thesubtest: #1}
  \addcontentsline{toc}{subsection}{Test \thesubtest: #1}
  \label{subtest:\thesubtest}%
}

