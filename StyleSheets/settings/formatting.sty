\newcommand{\SectionuseSubSectionSizing}{
  \titleformat{\section}
    {\normalfont\large\bfseries}{\thesection}{1em}{}
}

% Normal subsection format
\newcommand{\SubSectionuseNormalSectionSizing}{
  \titleformat{\subsection}
    {\normalfont\large\bfseries}{\thesubsection}{1em}{}
}

% Sub-subsection-like subsection format
